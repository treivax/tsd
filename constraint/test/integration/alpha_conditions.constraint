// Test 1 : Conditions Alpha Simples (AlphaNode)
// Types de base
type Transaction : <id: string, amount: number, status: string, timestamp: number>
type Account : <id: string, balance: number, type: string, active: bool>

// Expressions alpha simples - conditions sur un seul fait
{t: Transaction} / t.amount > 1000 ==> flag_large_transaction(t.id)

{t: Transaction} / t.status == "approved" ==> process_transaction(t.id)

{a: Account} / a.active == true AND a.balance >= 0 ==> activate_account_services(a.id)

{t: Transaction} / t.amount >= 100 AND t.amount <= 10000 ==> validate_transaction(t.id)

// Opérateurs de comparaison avancés
{t: Transaction} / t.status IN ["pending", "approved", "rejected"] ==> update_transaction_status(t.id, t.status)

{a: Account} / a.type LIKE "premium%" ==> apply_premium_benefits(a.id)

{t: Transaction} / t.id MATCHES "TX[0-9]+" ==> validate_transaction_format(t.id)

{a: Account} / a.id CONTAINS "VIP" ==> enable_vip_features(a.id)

// Fonctions intégrées
{t: Transaction} / LENGTH(t.id) == 8 ==> validate_id_length(t.id)

{t: Transaction} / UPPER(t.status) == "APPROVED" ==> confirm_approval(t.id)

{a: Account} / ABS(a.balance) > 1000 ==> check_balance_threshold(a.id, a.balance)

{t: Transaction} / ROUND(t.amount) == t.amount ==> validate_amount_precision(t.id)
