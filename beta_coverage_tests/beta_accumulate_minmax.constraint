// Test Beta Join - MIN/MAX simulation (simplified)
type Sensor : <id: string, location: string, type: string>
type Reading : <id: string, sensor_id: string, value: number, timestamp: string>

{s: Sensor, r: Reading} / s.type == "temperature" AND r.sensor_id == s.id AND r.value < 0 ==> freezing_alert(s.id)
{s: Sensor, r: Reading} / s.type == "temperature" AND r.sensor_id == s.id AND r.value > 40 ==> overheating_alert(s.id)
{s: Sensor, r: Reading} / s.location == "critical" AND r.sensor_id == s.id AND r.value > 20 ==> high_variance_alert(s.id)
