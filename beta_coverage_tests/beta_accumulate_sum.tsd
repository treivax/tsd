type Employee : <id: string, name: string, department: string>
type Order : <id: string, employee_id: string, amount: number>

rule r1 : {e: Employee} / SUM(o: Order / o.employee_id == e.id ; o.amount) >= 1000 ==> PRINT("Employee ", e.name, " has total sales >= 1000")

