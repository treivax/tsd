type Transaction : <id: string, amount: number, status: string>
type Account : <id: string, balance: number, active: bool>

{t: Transaction} / t.amount > 1000 ==> flag_large_transaction(t.id, t.amount)
{t: Transaction} / t.status == "approved" ==> process_transaction(t.id)
{a: Account} / a.active == true ==> monitor_account(a.id)
